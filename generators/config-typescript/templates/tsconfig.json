{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "es6", "scripthost"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,

    "sourceRoot": "./src"
  }
}
